@model Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<br />
<br />

<form asp-action="Create">
    <div>
        <label asp-for="Code" class="col-form-label"></label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Name" class="col-form-label"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>

    <input type="submit" value="Create" class="btn btn-primary mt-5"/>
    <a asp-action="Index" class="btn btn-light mt-5">Back To List</a>
</form>
