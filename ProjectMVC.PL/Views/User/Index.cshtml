@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>
<br />

<div class="row justify-content-center align-items-center">
    <div>
        <a asp-controller="User" asp-action="Create" class="btn btn-outline-success">Create New User</a>
    </div>
    <div class="row col-10 justify-content-center align-items-center">
        <form class="row col-8 justify-content-end" asp-action="Index">
            <div class="col-8">
                <input type="text" name="searchInput" placeholder="Search By Name" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.Id)</th>
                <th>@Html.DisplayNameFor(u => u.FName)</th>
                <th>@Html.DisplayNameFor(u => u.LName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(u => u.Roles)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M => User.Id)</td>
                    <td>@Html.DisplayFor(M => User.FName)</td>
                    <td>@Html.DisplayFor(M => User.LName)</td>
                    <td>@Html.DisplayFor(M => User.Email)</td>
                    <td>@Html.DisplayFor(M => User.PhoneNumber)</td>
                    <td>@string.Join(" ", User.Roles)</td>

                    <partial name="_ButtonsPartial" model="@User.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>There is no Employee</h3>
    </div>
}

