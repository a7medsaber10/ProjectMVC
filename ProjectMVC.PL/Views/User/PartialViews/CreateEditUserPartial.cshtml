@model UserViewModel

<div>
    <label asp-for="FirstName" class="col-form-label"></label>
    <input type="text" asp-for="FirstName" class="form-control" />
</div>

<div>
    <label asp-for="Email" class="col-form-label"></label>
    <input type="text" asp-for="Email" class="form-control" readonly/>
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div>
    <label asp-for="PhoneNumber" class="col-form-label"></label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
</div>
<div>
    <label asp-for="Roles" class="col-form-label"></label>
    <input asp-for="Roles" class="form-control" />
</div>
