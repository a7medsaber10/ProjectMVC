<h1>All Employees</h1>
<br />

<div class="row justify-content-center align-items-center">
    <div>
        <a asp-controller="Employee" asp-action="Create" class="btn btn-outline-success">Create New Employee</a>
    </div>
    <div class="row col-10 justify-content-center align-items-center">
        <form class="row col-8 justify-content-end" asp-action="Index">
            <div class="col-8">
                <input type="text" name="searchInput" placeholder="Search By Name" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped mt-3">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <th>@Html.DisplayNameFor(e => e.Address)</th>
                <th>@Html.DisplayNameFor(e => e.Department)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(e => e.IsActive)</th>
                <th>@Html.DisplayNameFor(e => e.Gender)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <td>@Employee.Department?.Name</td>
                    <td>@Html.DisplayFor(M => Employee.Salary)</td>
                    <td>@Html.DisplayFor(M => Employee.IsActive)</td>
                    <td>@Employee.Gender</td>
                    <td>@Html.DisplayFor(M => Employee.Email)</td>
                    <partial name="_ButtonsPartial" model="@Employee.Id.ToString()"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-5">
        <h3>There is no Employee</h3>
    </div>
}
